<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framelayout"
    android:background="@color/panton_yellow"
    tools:context=".activity.SimulatorActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_simulator"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Beforehand"
                android:textSize="20sp"
                android:textColor="@color/panton_grey">
            </TextView>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_Jacket"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/image1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Jacket"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Select Jacket" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_Top"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/image0" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Top"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Select Top" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_Bottom"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:src="@drawable/image4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Bottom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Select Bottom" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>

