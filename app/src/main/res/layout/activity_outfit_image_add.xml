<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/panton_yellow"
    android:gravity="center|top">

    <ImageView
        android:id="@+id/iv_addOutfit"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scaleType="fitXY" />

    <EditText
        android:id="@+id/et_addOutfit"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:ems="14"
        android:gravity="left|center"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColor="@color/panton_grey" />
    <Spinner
        android:id="@+id/spn_color"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:spinnerMode="dropdown"/>
    <Spinner
        android:id="@+id/spn_style"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:spinnerMode="dropdown" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chk_favourite"
        android:text="Set as favourite"/>

</LinearLayout>