<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FashionKingKimCoordi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/panton_yellow</item>
        <item name="colorPrimaryDark">@color/panton_grey</item>
        <item name="colorPrimaryVariant">@color/panton_grey</item>
        <item name="colorOnPrimary">@color/panton_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/panton_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/panton_yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.FashionKingKimCoordi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FashionKingKimCoordi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FashionKingKimCoordi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="myTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myTheme.ActionBarStyle</item>
    </style>

    <style name="myTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/panton_grey</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="myTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/panton_grey</item>
    </style>

</resources>